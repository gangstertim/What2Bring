<div class = "hero-unit">
  <div class = "hero-container">
    <p>
      <h4><%= @event.who %> is having a </h4>
      <h1><%= @event.name %>!!!</h1>
      <p><h2>Can you make it?</h2></p>
    </p>
  </div> <!-- end hero container -->
  <div class = "picture">
    <img src="../assets/funevent.jpeg" alt="it's gonna be awesome!">
  </div>  <!-- end picture -->
</div> <!-- end hero unit -->

<div class="row">
  <p><h4>It's on <%= @event.datec.strftime('%d %b %Y') %> at 
