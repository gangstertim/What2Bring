    <div class="span5">
      <p>
        <b>Where?</b>
        <%= @event.location %>
      </p>

      <p>
        <b>What?</b>
        <%= @event.description %>
      </p>

      <p class = "hidden">
        <b>How many guests could come?</b>
        <%= @event.how_many_guests %>
      </p>

      <p>
        <b>What still needs to be brought?</b>
        <%= @event.dishes %>
      </p>

      <p>
        <b>Can I chip in some cash instead?</b>
        <%= @event.cash %>
      </p>

      <p>
        <b>How much?</b>`
        <%= @event.howmuch %>
      </p>

    </div> <!-- end of span5 -->
    <div class = "span5">
      <b> Who's coming? </b>
      <p id="names">
        <%= @guests_names %>
      </p>
    </div> <!-- span5 -->
    <div class = "span5">
      <p id = 'rsvp'>
    </p>
  </div> <!-- span5 -->
</div> <!-- end of row -->


