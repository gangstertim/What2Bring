<%= form_for(@event) do |f| %>
<% if @event.errors.any? %>
<div class="alert alert-error">
  <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

  <ul>
    <% @event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="hero-unit">
  <h1 class="hidden-phone">What<a>2</a>Bring</h1>
  <h1 class="visible-phone" style="text-align: center">What<a>2</a><br class="visible-phone">Bring</h1>

  <br>
  <br class="hidden-desktop">

  <p class="hidden-phone">You already know when it's happening.  Now, it's only a question of who's coming <br class="visible-desktop">and what they're bringing.</p>
  <p class="visible-phone" style="text-align: center">You already know when it's happening.  Now, it's only a question of who's coming and what they're bringing.</p>

  <h3>Let's get started:</h3>
  <div class="control-group">
      <%= f.label :name, "My event is called", class: 'control-label' %>
      <%= f.text_field :name, :placeholder => "Alice's Tea Party" %>
  </div>
</div>

<div class="row">
  <div class="span4">
    <h2>Where & When?</h2>
    <div class="control-group">
      <div class="field">
       <%= f.label :datec, "When?" %>
       <div class="input-append date" id="event_date" data-date="12/02/2012" data-date-format="mm/dd/yyyy">
        <%= f.text_field :datec, placeholder: "Next tuesday at noon" , style: "width:82%"%>
        <span class="add-on"><i class="icon icon-calendar"></i></span>
      </div>
      
     </div>
   </div>
   <div class="control-group">
     <%= f.label :location, "Where?" %>
     <%= f.text_field :location, placeholder: "At the Mad Hatter's" %>
   </div>
   <div class="control-group">
     <%= f.label :description, "Description (Optional)" %>
     <%= f.text_area :description, rows: "4", placeholder: "We're going to drink tea and eat crumpetsâ€“ and the Cheshire Cat may make an appearance!" %>
   </div>
  </div>

  <div class="span4">
    <h2>Who?</h2>
    <div class="control-group">
      <%= f.label :who, "Who are you?" %>
      <%= f.text_field :who, placeholder: "Alice" %>
    </div>
    <div class="control-group">
     <%= f.label :email, rel: "tooltip", title: "We will send you an email to confirm your event", data:{placement: "left"}%>
     <%= f.text_field :email, placeholder: "alice@wonderland.com" %>
   </div>
   <div class="control-group">
    <%= f.label :how_many_guests, :rel=>"tooltip",  :title=>"When2Meet will only allow this many people to RSVP for this event", :data=>{:placement=>"left"}%>
    <%= f.number_field :how_many_guests, :min=>"1" %>
    </div>
    <div class="control-group", hidden>
      <%= f.label "What are their emails? (optional)" %>
      <%= f.text_area :emails %>
    </div>
  </div>

  <div class="span4">
    <h2>What?</h2>
    <div class="control-group">
      <%= f.label :dishes_temp, "Would you like guests to bring anything?" %>
      <div class="input-append" onkeypress='addDishWithKey(event)'>
        <%= f.text_field :dishes_temp, style: "width: 65%;",  placeholder: "crumpets" %>
        <button class="btn" id="event_dishes_add" type="button" rel="popover" onclick="addDish()" data-placement="bottom" data-trigger="manual" data-content="For quick adding - Press Return" data-animation="true" data-original-title="Enter an item, then click 'Add'">Add</button>
      </div>
    </div>
    <div class="control-group", hidden>
      <%= f.text_area :dishes, readonly: "" %>
    </div>
    <div class="control-group">
      <%= f.label :cash, "Would you like guests to chip in some cash?" %>
      <a onclick = 'showMoney()'>
        <%= f.check_box :cash %>
      </a>
    </div>
    <div class="control-group", hidden>
      <%= f.label :howmuch, "How much?" %>
      <div class="input-prepend">
        <span class="add-on">$</span>
        <%= f.text_field :howmuch , class: "span2" %>
      </div>
    </div>
  </div>
</div>

<div class="row form-actions">
    <%= f.submit class: "btn btn-primary", id: "verifyAttrs" %>
</div>

</form>

<script type="text/javascript">
$("[rel=tooltip]").tooltip();
</script>


<% end %>