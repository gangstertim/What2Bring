<%= form_for([@event, @guest]) do |f| %>
<% if @guest.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

  <ul>
    <% @guest.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<a onclick="buttonifyDishes()">I'm Bringing...</a><br>

<div class="field" id="dishes_to_list", hidden>
  <p id = "dishes_for_clicking">
    <%= @event.dishes %>
  </p>
</div>
   
<% if @event.cash? %>
  <div class="field" id="how_much">
      <%= f.check_box :bringing_cash %>
      <a>
        I'll chip in some cash
      </a><br>

      <%= @event.who %>
      <%= @event.howmuch %>
  </div>
<% end %>

<div class="field">
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>

<div class="field", hidden>
  <%= f.label :dishes %>
  <%= f.text_field :dishes %>
</div>

  <div class="actions" >
    <a onclick="addDishesToGuest()">
    <%= f.submit class: "btn btn-primary"%>
  </a>
  </div>

  <% end %>

<body onload="buttonifyDishes()">
